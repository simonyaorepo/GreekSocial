// models/role.js
module.exports = (sequelize, DataTypes) => {
    const Role = sequelize.define('Role', {
      id: {
        type: DataTypes.INTEGER,
        primaryKey: true,
        autoIncrement: true,
      },
      role_name: {
        type: DataTypes.STRING,
        allowNull: false,
      },
      description: {
        type: DataTypes.STRING,
      },
    }, {
      tableName: 'roles',
      timestamps: false,
    });
  
    Role.associate = function(models) {
      Role.hasMany(models.RolePermission, { foreignKey: 'role_id' });
    };
  
    return Role;
  };
  