const orgAccountService = require('../services/organizationAccountService');

exports.createOrganizationAccount = async (req, res) => {
  try {
    const account = await orgAccountService.createOrganizationAccountService(req.body);
    res.status(201).json(account);
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
};

exports.getAllOrganizationAccounts = async (req, res) => {
  try {
    const accounts = await orgAccountService.getAllOrganizationAccountsService();
    res.status(200).json(accounts);
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
};

exports.getOrganizationAccountById = async (req, res) => {
  try {
    const account = await orgAccountService.getOrganizationAccountByIdService(req.params.id);
    if (!account) return res.status(404).json({ message: 'OrganizationAccount not found' });
    res.status(200).json(account);
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
};

exports.updateOrganizationAccount = async (req, res) => {
  try {
    const account = await orgAccountService.updateOrganizationAccountService(req.params.id, req.body);
    res.status(200).json(account);
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
};

exports.deleteOrganizationAccount = async (req, res) => {
  try {
    await orgAccountService.deleteOrganizationAccountService(req.params.id);
    res.status(204).json();
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
};
